#!/bin/sh

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ðŸ”‡ and exit.
if [ "$vol" != "${vol%\[MUTED]}" ]; then
	printf "ïª€ 0%%";
	exit
fi

vol="${vol#Volume: }"
split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}
vol="$(split "$vol" ".")"
vol="${vol##0}"

case 1 in
	$((vol >= 1)) ) icon="ï©½" ;;
	* ) icon="ïª€" && exit ;;
esac

printf "%s %d%%" "$icon" "$vol"
