command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"

# TMUX Aliases
alias \
  tn="tmux new" \
  ta="tmux attach" \
  td="tmux detach"

alias journal="nvim --clean ~/JOURNAL.md"

alias hist="cat ~/.cache/zsh/history | sort | uniq | fzf | tr -d '\n' | wl-copy"

alias g="git"
alias c="cargo"
alias acli="arduino-cli"

alias dotf="cd ~/dotfiles"
alias dwm="cd ~/personal/suckless/dwm"
alias blocks="cd ~/personal/suckless/dwmblocks"

