command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"
command -v bat >/dev/null && alias cat="bat"

# TMUX Aliases
alias \
  tn="tmux new" \
  ta="tmux attach" \
  td="tmux detach"

alias hist="cat ~/.cache/zsh/history | sort | uniq | fzf | tr -d '\n' | wl-copy"

alias g="git"
alias c="cargo"
alias acli="arduino-cli"
